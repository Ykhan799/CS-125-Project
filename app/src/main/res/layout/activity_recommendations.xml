<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendationScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workouts"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:translationY="200px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a workout to complete"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:translationY="340px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout #1"
        android:id="@+id/workoutOneName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:translationY="450px"/>

    <TextView
        android:id="@+id/workoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="workouts"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:translationY="550px"/>

    <Button
        android:layout_width="650px"
        android:layout_height="wrap_content"
        android:translationY="850px"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Complete workout #1"
        android:id="@+id/workoutOneButton"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout #2"
        android:id="@+id/workoutTwoName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:translationY="1100px"/>

    <TextView
        android:id="@+id/workoutTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="workouts"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:translationY="1200px"/>

    <Button
        android:layout_width="650px"
        android:layout_height="wrap_content"
        android:translationY="1400px"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Complete workout #2"
        android:id="@+id/workoutTwoButton"/>

    <Button
        android:layout_width="650px"
        android:layout_height="wrap_content"
        android:translationY="1600px"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Recommend me workouts!"
        android:id="@+id/recommendButton"/>


</RelativeLayout>